<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:id="@+id/textView_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:id="@+id/textView_title"
        android:layout_below="@+id/textView_id"
        android:layout_toRightOf="@+id/textView_id"
        android:layout_toEndOf="@+id/textView_id"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARTIST"
        android:id="@+id/textView_artist"
        android:layout_alignTop="@+id/textView_title"
        android:layout_toRightOf="@+id/textView_title"
        android:layout_toEndOf="@+id/textView_title"
        android:layout_marginLeft="107dp"
        android:layout_marginStart="107dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA"
        android:id="@+id/textView_data"
        android:layout_below="@+id/textView_title"
        android:layout_alignLeft="@+id/textView_title"
        android:layout_alignStart="@+id/textView_title"
        android:layout_marginTop="52dp" />

</RelativeLayout>